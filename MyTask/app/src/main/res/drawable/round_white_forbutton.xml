<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#fff" android:endColor="#9F9F9F"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="#239B56" />
            <solid android:color="#fff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#222" />
            <gradient android:angle="-90" android:startColor="#fff" android:endColor="#9F9F9F" />
        </shape>
    </item>
</layer-list>