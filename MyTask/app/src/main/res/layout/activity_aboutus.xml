<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"

    android:background="#fff">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarHomeActivity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/blue"
        app:layout_scrollFlags="scroll|enterAlways"
        app:title="About">
    </android.support.v7.widget.Toolbar>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:layout_gravity="center"
        android:id="@+id/rellayout1"
        android:layout_below="@id/toolbarHomeActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:text="Version: 1.00" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/text"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="This app created by Rafael Ahmedov" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:id="@+id/textView3"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="Where we are?"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_centerInParent="true"
            android:text="Click Here"
            android:onClick="findLocation"
            android:layout_marginTop="5dp"
            android:textColor="@color/blue"
            />


    </RelativeLayout>

</RelativeLayout>