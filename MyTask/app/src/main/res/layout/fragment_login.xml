<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#81ae04">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:text="PLEASE SIGN IN"
            android:textColor="#FFF8DC"
            android:textSize="35sp" />


        <EditText
            android:id="@+id/inputEmailLogin"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_below="@id/textView"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:hint="Email"
            android:paddingLeft="5dp"
            android:inputType="textEmailAddress"
            android:background="#fff"/>


        <EditText
            android:id="@+id/inputPasswordLogin"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_below="@id/inputEmailLogin"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="#fff"
            android:paddingLeft="5dp"
            android:hint="Password"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/inputPasswordLogin"
            android:background="@color/white"
            android:onClick="signIn"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_alignLeft="@id/inputPasswordLogin"
            android:text="Sign in" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/inputPasswordLogin"
            android:layout_toEndOf="@id/checkboxLogin"
            android:layout_marginTop="3dp"
            android:padding="4dp"
            android:text="Rememmber me"
            android:background="@color/white"
            />


        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/btnLogin"
            android:layout_below="@id/inputPasswordLogin"
            android:background="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:id="@+id/checkboxLogin"/>



        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLogin"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="Don't have an account?"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textViewMoveToRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_centerInParent="true"
            android:onClick="moveToSingUp"
            android:text="Sign up"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#0000ff" />


    </RelativeLayout>


    <ProgressBar
        android:id="@+id/progressBarLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />


</RelativeLayout>