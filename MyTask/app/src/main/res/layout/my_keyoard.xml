<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/colorlayoutbackground"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittextlayout"
        android:id="@+id/btnlayout1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1"
            android:background="@drawable/testto_button"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:id="@+id/btn1"
            />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/testto_button"
            android:layout_weight="1"
            android:id="@+id/btn2"
            />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/testto_button"
            android:layout_weight="1"
            android:id="@+id/btn3"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnlayout1"
        android:layout_marginTop="20dp"
        android:id="@+id/btnlayout2"

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/testto_button"
            android:layout_weight="1"
            android:id="@+id/btn4"
            />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="5"
            android:textColor="@color/white"
            android:background="@drawable/testto_button"
            android:layout_weight="1"
            android:textSize="30sp"
            android:id="@+id/btn5"
            />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/testto_button"
            android:layout_weight="1"
            android:id="@+id/btn6"
            />

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnlayout2"
        android:layout_marginTop="20dp"
        android:id="@+id/btnlayout3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/testto_button"
            android:layout_weight="1"
            android:id="@+id/btn7"
            />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/testto_button"
            android:layout_weight="1"
            android:id="@+id/btn8"
            />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/testto_button"
            android:layout_weight="1"
            android:id="@+id/btn9"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnlayout3"
        android:layout_marginTop="20dp"
        android:id="@+id/btnlayout4"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_weight="1"
            android:background="@drawable/testto_button"
            android:id="@+id/btnCancel"
            />

        <Button
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/testto_button"
            android:layout_weight="1"
            android:id="@+id/btn0"
            />

        <Button
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="del"
            android:textColor="@color/white"
            android:background="@drawable/testto_button"
            android:textSize="15sp"
            android:layout_weight="1"
            android:id="@+id/btnDelete"
            />

    </LinearLayout>

    </RelativeLayout>

</merge>